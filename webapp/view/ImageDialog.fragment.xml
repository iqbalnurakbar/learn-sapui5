<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="imageDialog"
        title="Why Are You Gae?!"
    >
        <content>
            <Image
                id="dialogImage"
                src="{/imagePath}"
            />
        </content>
        <beginButton>
            <Button
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog('imageDialog')"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
